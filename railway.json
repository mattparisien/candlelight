{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build:production",
    "watchPatterns": [
      "packages/server/**",
      "packages/plugins/**"
    ]
  },
  "deploy": { 
    "startCommand": "cd packages/server && npm start",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE"
  }
}
